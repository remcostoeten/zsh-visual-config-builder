{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "dist", "build"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noEmptyInterface": "error",
				"noExplicitAny": "error"
			},
			"style": {
				"useImportType": "error",
				"noNonNullAssertion": "error"
			},
			"a11y": {
				"useButtonType": "off",
				"useSemanticElements": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"semicolons": "always",
			"arrowParentheses": "always",
			"indentStyle": "tab",
			"indentWidth": 2
		}
	}
}
